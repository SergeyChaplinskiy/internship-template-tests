{
    "env": {
        "commonjs": true,
        "es2021": true
    },
    "plugins": [
        "jest",
        "jest-formatting"
    ],
    "extends": [
        "airbnb-base",
        "plugin:jest-formatting/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 2],
        "no-console": "off",
        "jest-formatting/padding-around-describe-blocks": 2,
        "jest-formatting/padding-around-test-blocks": 2
    }
}